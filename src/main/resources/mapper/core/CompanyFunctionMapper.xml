<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coolplay.system.core.dao.CompanyFunctionMapper">

    <resultMap id="CompanyFunction" type="com.coolplay.system.core.model.CompanyFunctionModel">
        <result property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="functionName" column="function_name"/>
        <result property="display" column="display"/>
        <result property="status" column="status"/>
        <result property="action" column="action"/>
        <result property="sort" column="sort"/>
        <result property="ctime" column="c_time"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        id ,parent_id ,function_name ,display ,status ,action ,sort ,c_time 
	    ]]>
	</sql>

	<sql id="findWhere">
	    <where>
			<if test="functionName != null">
				AND function_name = #{functionName}
			</if>
			<if test="action != null">
				AND action = #{action}
			</if>
	    </where>
	</sql>

	
	<select id="find" resultMap="CompanyFunction" parameterType="java.util.Map">
	    SELECT <include refid="columns"/> FROM d_company_function 
		<include refid="findWhere"/>
    </select>

	
</mapper>

